<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_5">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lzy:cardBackgroundColor="@android:color/white"
        lzy:cardCornerRadius="10dp"
        lzy:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.lzyyd.lyb.ui.CustomRoundAngleImageView
                android:id="@+id/iv_goods_pic"
                android:layout_width="match_parent"
                android:layout_height="150.0dip"
                android:scaleType="fitXY"
                lzy:left_top_radius="5dp"
                lzy:right_top_radius="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_goods_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/pop_text_bg"
                    android:textSize="@dimen/textsize14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/tv_goods_type_price"
                            android:textColor="@color/red_price"
                            android:textSize="@dimen/textsize15" />

                        <LinearLayout
                            android:id="@+id/ll_buy_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_buy_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"
                                android:textColor="@color/list_divider"
                                android:textSize="@dimen/textsize12" />

                            <TextView
                                android:id="@+id/tv_buy_goods"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人购买"
                                android:textColor="@color/list_divider"
                                android:textSize="@dimen/textsize12" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@drawable/shape_intergal_text"
                        android:textColor="@color/hot_red"
                        android:textSize="@dimen/textsize10" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
